<%= form_for @classified do |f| %>
  <% f.hidden_field :category, value: params[:format] %>

  <%= f.label :title %>
  <%= f.text_field :title %>
<br />
  <%= f.label :description %>
  <%= f.text_area :description, cols: 40, rows: 3 %>
<br />
  <%= f.label :price %>
  <%= f.number_field :price, min: 1, max: 999999 %>
<br />
  <%= f.label :rate, "Rate, change later to only show if category is service" %>
  <%= f.check_box :rate %>

  <%= f.label :subcategory %>
  <%= f.text_field :subcategory %>

  <%= f.submit %>
<% end %>
