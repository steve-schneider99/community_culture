<div class="row">
  <div class="col-sm-3">
    <h3>Classifieds Home Page</h3>
  </div>
  <div class="col-sm-7">
    <h3>Listed Classifieds</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-3">
    <h4>Add a new classified here</h4>
    <ul>
      <li><%= link_to "SELL - Create a new classified", new_classified_path("sell") %></li>
      <li><%= link_to "BUY - Create a new classified", new_classified_path("buy") %></li>
      <li><%= link_to "TRADE - Create a new classified", new_classified_path("trade") %></li>
    </ul>
  </div>
  <div class="col-sm-3">
      <h5>SELLING</h5>
      <% if @selling_ads.any? %>
        <ul class="list-group">
        <% @selling_ads.each do |ad| %>
            <li class="list-group-item">
              <span class="badge">$<%= ad.price %></span>
              <%= link_to ad.title, classified_path(ad) %></li>
        <% end %>
      <% else %>
        <p>"No selling classifieds added yet!"</p>
      <% end %>
  </div>
  <div class="col-sm-3">
      <h5>BUYING</h5>
      <% if @buying_ads.any? %>
        <ul>
        <% @buying_ads.each do |ad| %>
          <li><%= link_to ad.title, classified_path(ad) %></li>
        <% end %>
      <% else %>
        <p>"No buying classifieds added yet!"</p>
      <% end %>
  </div>
  <div class="col-sm-3">
      <h5>TRADING</h5>
      <% if @trading_ads.any? %>
        <ul>
        <% @trading_ads.each do |ad| %>
          <li><%= link_to ad.title, classified_path(ad) %></li>
        <% end %>
      <% else %>
        <p>"No trading classifieds added yet!"</p>
      <% end %>
  </div>
</div>
